@page "{id}"
@model Rockmuseet.Pages.Admin.UpdateModel
@{
}

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Admin</h1>
            <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
        </div>
    </div>
</section>
<section>
    <div class="album py-5 bg-light">
        <div class="container">
        </div>
        <div class="row g-5 justify-content-center">
            <div class="col-md-7 col-lg-8">
                <form method="post">
                    <div class="row g-3">
                        <input asp-for="@Model.History.Id" class="form-control" type="hidden">
                        <input asp-for="@Model.History.HistoryAudioId" class="form-control" type="hidden">
                        <input asp-for="@Model.History.MusicAudioId" class="form-control" type="hidden">
                        <div class="col-sm-12">
                            <label class="form-label">Name</label>
                            <input asp-for="@Model.History.Name" class="form-control">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Description</label>
                            <textarea asp-for="@Model.History.Description" type="email" class="form-control" id="description"></textarea>
                            <span asp-validation-for="@Model.History.Description" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Image</label>
                            <input asp-for="@Model.History.Image" class="form-control">
                        </div>
                        <div class="col-12">
                            <label class="form-label">History Audio</label>
                            <input asp-for="@Model.History.HistoryAudio" class="form-control">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Music Audio</label>
                            <input asp-for="@Model.History.MusicAudio" class="form-control">
                        </div>
                    </div>
                    <button class="w-100 btn btn-primary btn-lg mt-5" type="submit">Update</button>
                </form>
            </div>
        </div>
    </div>
</section>
